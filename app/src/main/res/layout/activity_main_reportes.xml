<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainReportes"
    android:background="@drawable/d2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp">
        </ImageView>

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/adlam_display"
            android:text="Generador de Reportes CINERGIA"
            android:textColor="@color/letraPrincipal"
            android:textSize="23dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivLogo">
        </TextView>

        <!-- CardView Nodo -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvNodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitulo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@color/letraPrincipal">

                <TextView
                    android:id="@+id/tvNodo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="Selecciona Nodo"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sNodo"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView Fecha Emisión -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvFechaEmision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"

            app:layout_constraintTop_toBottomOf="@+id/cvNodo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@color/letraPrincipal">

                <TextView
                    android:id="@+id/tvFechaEmision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="F. Emisión"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etFechaEmision"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@color/white"
                    android:hint="dd/mm/aa"
                    android:textColor="@color/letraPrincipal"
                    android:background="@drawable/boton_redondeado"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="25dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView Fecha Apertura -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvFechaApertura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cvFechaEmision">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@color/letraPrincipal">

                <TextView
                    android:id="@+id/tvFechaApertura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="F. Apertura"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etFechaApertura"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@color/white"
                    android:hint="dd/mm/aa"
                    android:textColor="@color/letraPrincipal"
                    android:background="@drawable/boton_redondeado"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="25dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView Fecha Llegada -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvFechaLlegada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cvFechaApertura">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@color/letraPrincipal">

                <TextView
                    android:id="@+id/tvFechaLlegada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="F. LLegada"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etFechaLlegada"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@color/white"
                    android:hint="dd/mm/aa"
                    android:textColor="@color/letraPrincipal"
                    android:background="@drawable/boton_redondeado"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="25dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView Fecha Cierre -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvFechaCierre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cvFechaLlegada">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@color/letraPrincipal">

                <TextView
                    android:id="@+id/tvFechaCierre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="F. Cierre"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etFechaCierre"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@color/white"
                    android:hint="dd/mm/aa"
                    android:textColor="@color/letraPrincipal"
                    android:background="@drawable/boton_redondeado"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="25dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView Hora llegada -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvTrabajador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cvFechaCierre">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@color/letraPrincipal">

                <TextView
                    android:id="@+id/tvTrabajador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="Empleado"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sTrabajador"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView Hora llegada -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cvTrabajador">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@color/letraPrincipal">

                <TextView
                    android:id="@+id/tvHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="Hora llegada "
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sHora"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView Area Tecnica -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvAreaTecnica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cvHora">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@color/letraPrincipal">

                <TextView
                    android:id="@+id/tvArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="Área Tecnico "
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sArea"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView Entidad -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvEntidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cvAreaTecnica">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@color/letraPrincipal">

                <TextView
                    android:id="@+id/tvEntidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="Entidad"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sEntidad"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView Tipo de Servicio -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvTipoServicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cvEntidad">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@color/letraPrincipal">

                <TextView
                    android:id="@+id/tvServicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="T. Servicio"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sServicio"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView Tipo de Mantenimiento -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvTipoMantenimineto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cvTipoServicio">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@color/letraPrincipal">

                <TextView
                    android:id="@+id/tvMantenimineto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="T. Mantenimiento"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sMantenimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Seleccionar actividades -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvActividades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cvTipoMantenimineto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@color/letraPrincipal">

                <TextView
                    android:id="@+id/tvActividades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="Actividades"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnActividades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/adlam_display"
                    android:text="Seleccionar"
                    android:textSize="22dp"
                    android:background="@drawable/boton_redondeado2"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnFotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/adlam_display"
            android:text="Subir Fotos"
            android:textColor="@color/letraPrincipal"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvActividades"
            android:background="@drawable/boton_redondeado2">
        </Button>

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/adlam_display"
            android:text="Aceptar"
            android:textColor="@color/letraPrincipal"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnFotos"
            android:background="@drawable/boton_redondeado2">
        </Button>


        <Button
            android:id="@+id/btnFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/adlam_display"
            android:text="-------"
            android:textColor="@color/letraPrincipal"
            android:textSize="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAceptar"
            android:background="@drawable/boton_redondeado3">
        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>